<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ecarrilloS5.ActualizarEliminar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="ACTUALIZAR - ELIMINAR" FontSize="20" HorizontalTextAlignment="Center"/>
                <Entry x:Name="txtCodigo" IsEnabled="False"/>
                <Entry x:Name="txtNombre" />
                <Entry x:Name="txtApellido" />
                <Entry x:Name="txtEdad" Keyboard="Numeric"/>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnActualizar" Clicked="btnActualizar_Clicked" Text="Actualizar" Grid.Row="0" Grid.Column="0"/>
                    <Button x:Name="btnEliminar" Clicked="btnEliminar_Clicked" Text="Eliminar" Grid.Row="0" Grid.Column="1"/>
                </Grid>
            </StackLayout>
    </ContentPage.Content>
</ContentPage>