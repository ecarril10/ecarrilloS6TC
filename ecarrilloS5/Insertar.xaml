<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ecarrilloS5.Insertar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="INSERTAR ESTUDIANTES" FontSize="20" HorizontalTextAlignment="Center"/>
            <Entry x:Name="txtCodigo" Placeholder="Insertar Código"/>
            <Entry x:Name="txtNombre" Placeholder="Insertar Nombre"/>
            <Entry x:Name="txtApellido" Placeholder="Insertar Apellido"/>
            <Entry x:Name="txtEdad" Placeholder="Insertar Edad"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnInsertar" Clicked="btnInsertar_Clicked" Text="Insertar" Grid.Row="0" Grid.Column="0"/>
                <Button x:Name="btnCancelar" Clicked="btnCancelar_Clicked" Text="Cancelar" Grid.Row="0" Grid.Column="1"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>